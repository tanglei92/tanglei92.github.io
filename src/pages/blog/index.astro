---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'

let posts: any[] = []
try {
  posts = (await getCollection('blog'))
    .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
} catch {
  // Collection might not exist yet
}

const categories = ['全部', ...new Set(posts.map(p => p.data.category).filter(Boolean))]
---

<BaseLayout title="博客">
  <div class="space-y-8 animate-fade-in">
    <header class="space-y-4">
      <h1 class="text-3xl font-bold">博客</h1>
      <p class="text-gray-600 dark:text-gray-400">
        记录技术学习和生活思考
      </p>
    </header>

    {categories.length > 1 && (
      <div class="flex flex-wrap gap-2">
        {categories.map((cat, index) => (
          <button
            class:list={[
              'px-3 py-1 text-sm rounded-full transition-colors',
              index === 0
                ? 'bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900'
                : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700'
            ]}
          >
            {cat}
          </button>
        ))}
      </div>
    )}

    {posts.length > 0 ? (
      <div class="space-y-6">
        {posts.map((post) => (
          <article class="group">
            <a
              href={`/blog/${post.slug}`}
              class="block p-6 -mx-6 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-900/50 transition-colors"
            >
              <div class="flex items-start justify-between gap-4">
                <div class="space-y-2">
                  <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </h2>
                  {post.data.description && (
                    <p class="text-gray-600 dark:text-gray-400 line-clamp-2">
                      {post.data.description}
                    </p>
                  )}
                  <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
                    <time>{new Date(post.data.date).toLocaleDateString('zh-CN')}</time>
                    {post.data.category && (
                      <span class="px-2 py-0.5 bg-gray-100 dark:bg-gray-800 rounded">
                        {post.data.category}
                      </span>
                    )}
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="p-12 bg-gray-50 dark:bg-gray-900 rounded-xl text-center">
        <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-700 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <p class="text-gray-500 dark:text-gray-400">
          暂无文章，敬请期待...
        </p>
      </div>
    )}
  </div>
</BaseLayout>
