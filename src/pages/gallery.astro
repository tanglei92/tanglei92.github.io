---
import BaseLayout from '../layouts/BaseLayout.astro'

const images: { src: string; alt: string; category?: string }[] = [
  // 添加图片，格式: { src: '/images/xxx.jpg', alt: '描述', category: '分类' }
]

const categories = ['全部', ...new Set(images.map(img => img.category).filter(Boolean))]
---

<BaseLayout title="相册">
  <div class="space-y-8 animate-fade-in">
    <header class="space-y-4">
      <h1 class="text-3xl font-bold" data-zh="相册" data-en="Gallery">相册</h1>
      <p class="text-gray-600 dark:text-gray-400" data-zh="记录生活中的美好瞬间" data-en="Capturing beautiful moments in life">
        记录生活中的美好瞬间
      </p>
    </header>

    {categories.length > 1 && (
      <div class="flex flex-wrap gap-2">
        {categories.map((cat, index) => (
          <button
            class:list={[
              'px-3 py-1 text-sm rounded-full transition-colors',
              index === 0
                ? 'bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900'
                : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700'
            ]}
          >
            {cat}
          </button>
        ))}
      </div>
    )}

    {images.length > 0 ? (
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {images.map((image) => (
          <div class="aspect-square overflow-hidden rounded-xl">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    ) : (
      <div class="p-12 bg-gray-50 dark:bg-gray-900 rounded-xl text-center">
        <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-700 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <p class="text-gray-500 dark:text-gray-400" data-zh="相册正在整理中，敬请期待..." data-en="Gallery is being organized, stay tuned...">
          相册正在整理中，敬请期待...
        </p>
        <p class="text-sm text-gray-400 dark:text-gray-500 mt-2" data-zh="将照片放入 public/images 目录，并在此页面添加配置即可展示" data-en="Add photos to public/images folder and configure this page to display them">
          将照片放入 public/images 目录，并在此页面添加配置即可展示
        </p>
      </div>
    )}
  </div>
</BaseLayout>
