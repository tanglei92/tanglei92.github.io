---
import BaseLayout from '../layouts/BaseLayout.astro'
import SocialLink from '../components/SocialLink.astro'

const socialLinks = [
  {
    href: 'https://github.com/MrLeion',
    label: 'GitHub',
    icon: 'github' as const,
    description: '查看我的开源项目和代码'
  },
  {
    href: 'https://twitter.com/MrLeion',
    label: 'Twitter / X',
    icon: 'twitter' as const,
    description: '关注我的动态和想法'
  },
  {
    href: 'https://space.bilibili.com/MrLeion',
    label: 'Bilibili',
    icon: 'bilibili' as const,
    description: '观看我的视频内容'
  },
]

const friendLinks: { name: string; url: string; avatar: string; description: string }[] = [
  // 添加友链，格式: { name: '名称', url: '链接', avatar: '头像', description: '描述' }
]
---

<BaseLayout title="链接">
  <div class="space-y-12 animate-fade-in">
    <header class="space-y-4">
      <h1 class="text-3xl font-bold">链接</h1>
      <p class="text-gray-600 dark:text-gray-400">
        在其他平台找到我
      </p>
    </header>

    <!-- Social Links -->
    <section class="space-y-4">
      <h2 class="text-xl font-semibold">社交账号</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        {socialLinks.map((link) => (
          <SocialLink
            href={link.href}
            label={link.label}
            icon={link.icon}
            description={link.description}
          />
        ))}
      </div>
    </section>

    <!-- Friend Links -->
    {friendLinks.length > 0 && (
      <section class="space-y-4">
        <h2 class="text-xl font-semibold">友情链接</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          {friendLinks.map((friend) => (
            <a
              href={friend.url}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-4 p-4 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl card-hover"
            >
              <img
                src={friend.avatar}
                alt={friend.name}
                class="w-12 h-12 rounded-full object-cover"
              />
              <div>
                <div class="font-medium text-gray-900 dark:text-gray-100">{friend.name}</div>
                <div class="text-sm text-gray-500 dark:text-gray-400">{friend.description}</div>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- RSS -->
    <section class="p-6 bg-gray-50 dark:bg-gray-900 rounded-xl">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 flex items-center justify-center bg-orange-100 dark:bg-orange-900/30 rounded-lg">
          <svg class="w-6 h-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
          </svg>
        </div>
        <div>
          <div class="font-medium text-gray-900 dark:text-gray-100">RSS 订阅</div>
          <div class="text-sm text-gray-500 dark:text-gray-400">
            通过 RSS 订阅获取最新文章更新
          </div>
        </div>
        <a
          href="/rss.xml"
          class="ml-auto px-4 py-2 bg-orange-500 text-white rounded-lg text-sm font-medium hover:bg-orange-600 transition-colors"
        >
          订阅
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
