---
import BaseLayout from '../layouts/BaseLayout.astro'
import SocialLink from '../components/SocialLink.astro'

const socialLinks = [
  {
    href: 'https://github.com/tanglei92',
    label: 'GitHub',
    icon: 'github' as const,
    description: '查看我的开源项目和代码',
    descriptionEn: 'Check out my open source projects'
  },
  {
    href: 'https://x.com/MrLeion',
    label: 'X',
    icon: 'twitter' as const,
    description: '关注我的动态和想法',
    descriptionEn: 'Follow my updates and thoughts'
  },
]

const friendLinks: { name: string; url: string; avatar: string; description: string }[] = [
  // 添加友链，格式: { name: '名称', url: '链接', avatar: '头像', description: '描述' }
]
---

<BaseLayout title="链接">
  <div class="space-y-12 animate-fade-in">
    <header class="space-y-4">
      <h1 class="text-3xl font-bold" data-zh="链接" data-en="Links">链接</h1>
      <p class="text-gray-600 dark:text-gray-400" data-zh="在其他平台找到我" data-en="Find me on other platforms">
        在其他平台找到我
      </p>
    </header>

    <!-- Social Links -->
    <section class="space-y-4">
      <h2 class="text-xl font-semibold" data-zh="社交账号" data-en="Social Accounts">社交账号</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-4 p-4 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl hover:border-blue-500 dark:hover:border-blue-400 transition-colors"
          >
            <div class="w-12 h-12 flex items-center justify-center bg-gray-100 dark:bg-gray-800 rounded-lg">
              {link.icon === 'github' && (
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {link.icon === 'twitter' && (
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              )}
            </div>
            <div>
              <div class="font-medium text-gray-900 dark:text-gray-100">{link.label}</div>
              <div class="text-sm text-gray-500 dark:text-gray-400" data-zh={link.description} data-en={link.descriptionEn}>
                {link.description}
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Friend Links -->
    {friendLinks.length > 0 && (
      <section class="space-y-4">
        <h2 class="text-xl font-semibold" data-zh="友情链接" data-en="Friend Links">友情链接</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          {friendLinks.map((friend) => (
            <a
              href={friend.url}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-4 p-4 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl card-hover"
            >
              <img
                src={friend.avatar}
                alt={friend.name}
                class="w-12 h-12 rounded-full object-cover"
              />
              <div>
                <div class="font-medium text-gray-900 dark:text-gray-100">{friend.name}</div>
                <div class="text-sm text-gray-500 dark:text-gray-400">{friend.description}</div>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- RSS -->
    <section class="p-6 bg-gray-50 dark:bg-gray-900 rounded-xl">
      <div class="flex flex-col sm:flex-row items-center gap-4">
        <div class="w-12 h-12 flex items-center justify-center bg-orange-100 dark:bg-orange-900/30 rounded-lg">
          <svg class="w-6 h-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
          </svg>
        </div>
        <div class="text-center sm:text-left">
          <div class="font-medium text-gray-900 dark:text-gray-100" data-zh="RSS 订阅" data-en="RSS Feed">RSS 订阅</div>
          <div class="text-sm text-gray-500 dark:text-gray-400" data-zh="通过 RSS 订阅获取最新文章更新" data-en="Subscribe via RSS to get latest posts">
            通过 RSS 订阅获取最新文章更新
          </div>
        </div>
        <a
          href="/rss.xml"
          class="sm:ml-auto px-4 py-2 bg-orange-500 text-white rounded-lg text-sm font-medium hover:bg-orange-600 transition-colors"
          data-zh="订阅" data-en="Subscribe"
        >
          订阅
        </a>
      </div>
    </section>

    <!-- Email -->
    <section class="p-6 bg-gray-50 dark:bg-gray-900 rounded-xl">
      <div class="flex flex-col sm:flex-row items-center gap-4">
        <div class="w-12 h-12 flex items-center justify-center bg-blue-100 dark:bg-blue-900/30 rounded-lg">
          <svg class="w-6 h-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <div class="text-center sm:text-left">
          <div class="font-medium text-gray-900 dark:text-gray-100" data-zh="邮箱联系" data-en="Email Contact">邮箱联系</div>
          <div class="text-sm text-gray-500 dark:text-gray-400" data-zh="有任何问题欢迎发邮件联系我" data-en="Feel free to email me with any questions">
            有任何问题欢迎发邮件联系我
          </div>
        </div>
        <a
          href="mailto:shtangzenglei@gmail.com"
          class="sm:ml-auto px-4 py-2 bg-blue-500 text-white rounded-lg text-sm font-medium hover:bg-blue-600 transition-colors"
        >
          shtangzenglei@gmail.com
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
