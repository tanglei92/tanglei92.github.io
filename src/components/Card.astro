---
interface Props {
  title: string
  description?: string
  href?: string
  image?: string
  date?: string
  tags?: string[]
}

const { title, description, href, image, date, tags } = Astro.props
const Tag = href ? 'a' : 'div'
---

<Tag
  href={href}
  class:list={[
    'block p-6 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl',
    href && 'card-hover cursor-pointer'
  ]}
>
  {image && (
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover rounded-lg mb-4"
    />
  )}

  <div class="space-y-2">
    {date && (
      <time class="text-sm text-gray-500 dark:text-gray-400">
        {date}
      </time>
    )}

    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
      {title}
    </h3>

    {description && (
      <p class="text-gray-600 dark:text-gray-400 line-clamp-2">
        {description}
      </p>
    )}

    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2 pt-2">
        {tags.map((tag) => (
          <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</Tag>
